<h1 class="display-4 mb-4" style="text-align: center;">Nuevo Artículo</h1>
<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card bg-light">
            <div class="card-body">
                <form action="/articulos/add" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="description" placeholder="Nombre o descripción"
                            id="">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="price" placeholder="Precio" id="">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="stock" placeholder="Stock" id="">
                    </div>
                    <button class="btn btn-primary">
                        Registrar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>