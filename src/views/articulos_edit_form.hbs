<h1 class="display-4 mb-4" style="text-align: center;">Editar Art√≠culo</h1>
<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card bg-light">
            <div class="card-body">
                {{#with product}}
                <form action="/articulos/edit/" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="_id" id="" value="{{_id}}" readonly>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="description" value="{{description}}" id="">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="price" value="{{price}}" id="">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="stock" value="{{stock}}" id="">
                    </div>
                    <button class="btn btn-primary">
                        Actualizar
                    </button>
                    {{/with}}
                </form>
            </div>
        </div>
    </div>
</div>